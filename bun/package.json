{
  "name": "video-watermark-remover",
  "version": "1.0.0",
  "description": "TypeScript重构版视频去水印服务，支持抖音和小红书平台",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "lint": "bun run --bun tsc --noEmit"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cheerio": "^0.22.35"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "video",
    "watermark",
    "douyin",
    "xiaohongshu",
    "typescript",
    "bun"
  ],
  "author": "Video Watermark Remover Team",
  "license": "MIT"
}
